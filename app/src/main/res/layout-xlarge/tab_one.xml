<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="320dp"
        app:cardElevation="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:elevation="5dp"
        android:layout_marginTop="50dp"
        android:layout_height="530dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="388dp"
            app:srcCompat="@drawable/room"
            android:id="@+id/imageView5"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Укажите количество комнат"
            android:id="@+id/textView"
            android:layout_marginTop="310dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:background="@android:drawable/editbox_dropdown_dark_frame" />

        <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/removeRoom"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_marginTop="435dp"
            android:layout_marginLeft="20dp" />

        <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addRoom"
            android:layout_above="@+id/textView5"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView"
            android:elevation="0dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="435dp" />

        <TextView
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/countRooms"
            android:textSize="26sp"
            android:layout_alignBottom="@+id/removeRoom"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="440dp"
            android:layout_marginLeft="155dp" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="320dp"
        app:contentPadding="0dp"
        app:cardElevation="5dp"
        android:layout_alignParentTop="true"
        android:elevation="5dp"
        android:layout_marginTop="50dp"
        android:layout_height="530dp"
        android:layout_marginLeft="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="396dp"
            app:srcCompat="@drawable/toilet"
            android:id="@+id/imageView9"
            android:scaleType="centerCrop" />

        <TextView
            android:text="Сколько сан. узлов в вашей квартире?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="310dp"
            android:id="@+id/textView5"
            android:textSize="24sp"
            android:layout_below="@+id/removeRoom"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:background="@android:drawable/editbox_dropdown_dark_frame" />

        <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_alignLeft="@+id/addToilet"
            android:layout_alignStart="@+id/addToilet"
            android:layout_marginTop="435dp"
            android:id="@+id/addToilet"
            android:layout_marginLeft="210dp" />

        <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/addToilet"
            android:layout_alignLeft="@+id/removeRoom"
            android:layout_alignStart="@+id/removeRoom"
            android:id="@+id/removeToilet"
            android:layout_marginTop="435dp"
            android:layout_marginLeft="20dp" />

        <TextView
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:id="@+id/countToilet"
            android:textSize="26sp"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="440dp" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="320dp"
        app:cardElevation="5dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:elevation="5dp"
        android:layout_marginTop="50dp"
        android:layout_height="530dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="394dp"
            app:srcCompat="@drawable/area"
            android:id="@+id/imageView6"
            android:scaleType="centerCrop" />

        <TextView
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:textSize="26sp"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="440dp"
            android:id="@+id/area" />

        <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_alignLeft="@+id/addToilet"
            android:layout_alignStart="@+id/addToilet"
            android:layout_marginTop="435dp"
            android:layout_marginLeft="210dp"
            android:id="@+id/addArea" />

        <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/addToilet"
            android:layout_alignLeft="@+id/removeRoom"
            android:layout_alignStart="@+id/removeRoom"
            android:layout_marginTop="435dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/removeArea" />

        <TextView
            android:text="Укажите площадь квартиры"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="310dp"
            android:textSize="24sp"
            android:layout_below="@+id/removeRoom"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:background="@android:drawable/editbox_dropdown_dark_frame" />

    </android.support.v7.widget.CardView>

</RelativeLayout>