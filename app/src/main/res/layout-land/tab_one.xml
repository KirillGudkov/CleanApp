<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        app:cardElevation="5dp"
        app:contentPadding="5dp"
        android:layout_marginTop="140dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="60dp"
        android:layout_width="600dp"
        android:layout_marginLeft="40dp">

        <TextView
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:layout_alignBottom="@+id/removeRoom"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="460dp"
            android:id="@+id/countToilet" />

        <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="350dp"
            android:id="@+id/removeToilet" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Сколько сан. узлов в вашей квартире?"
            android:id="@+id/textView"
            android:layout_marginTop="15dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_marginLeft="10dp" />

        <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addToilet"
            android:layout_above="@+id/textView5"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView"
            android:elevation="0dp"
            android:layout_marginLeft="500dp"
            android:layout_marginTop="0dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        app:cardElevation="5dp"
        app:contentPadding="5dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="60dp"
        android:layout_width="600dp"
        android:layout_marginLeft="40dp">

        <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/removeRoom"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="350dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Сколько комнат в вашей квартире?"
            android:id="@+id/textView"
            android:layout_marginTop="15dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_marginLeft="10dp" />

        <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView5"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView"
            android:elevation="0dp"
            android:layout_marginLeft="500dp"
            android:layout_marginTop="0dp"
            android:id="@+id/addRoom" />

        <TextView
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/countRooms"
            android:textSize="26sp"
            android:layout_alignBottom="@+id/removeRoom"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="460dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        app:cardElevation="5dp"
        app:contentPadding="5dp"
        android:layout_height="60dp"
        android:layout_width="600dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp">

        <TextView
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:layout_alignBottom="@+id/removeRoom"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="460dp"
            android:id="@+id/area" />

        <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="350dp"
            android:id="@+id/reamoveArea" />

        <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView5"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView"
            android:elevation="0dp"
            android:layout_marginLeft="500dp"
            android:layout_marginTop="0dp"
            android:id="@+id/addArea" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Укажите площадь квартиры"
            android:id="@+id/textView"
            android:layout_marginTop="15dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_marginLeft="10dp" />
    </android.support.v7.widget.CardView>

</RelativeLayout>