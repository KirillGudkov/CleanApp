<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="320dp"
        android:layout_marginTop="48dp"
        android:layout_height="150dp"
        app:cardElevation="5dp"
        app:contentPadding="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/countRooms"
            android:textSize="26sp"
            android:layout_alignBottom="@+id/removeRoom"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="150dp" />

        <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/removeRoom"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Сколько комнат в вашей квартире?"
            android:id="@+id/textView"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textAlignment="center" />

        <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addRoom"
            android:layout_above="@+id/textView5"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView"
            android:elevation="0dp"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="60dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="320dp"
        android:layout_height="150dp"
        android:layout_marginBottom="230dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:contentPadding="10dp"
        app:cardElevation="5dp">

        <TextView
            android:text="Сколько сан. узлов в вашей квартире?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/textView5"
            android:textSize="18sp"
            android:layout_below="@+id/removeRoom"
            android:layout_centerHorizontal="true"
            android:textAlignment="center" />

        <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_alignLeft="@+id/addToilet"
            android:layout_alignStart="@+id/addToilet"
            android:layout_marginTop="60dp"
            android:id="@+id/addToilet"
            android:layout_marginLeft="190dp" />

        <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/addToilet"
            android:layout_alignLeft="@+id/removeRoom"
            android:layout_alignStart="@+id/removeRoom"
            android:id="@+id/removeToilet"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="30dp" />

        <TextView
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:id="@+id/countToilet"
            android:textSize="26sp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="65dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="320dp"
        android:layout_height="150dp"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:contentPadding="10dp"
        app:cardElevation="5dp">

        <TextView
            android:text="Укажите площадь квартиры"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:layout_below="@+id/removeRoom"
            android:layout_centerHorizontal="true"
            android:textAlignment="center" />

        <TextView
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:textSize="26sp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="65dp"
            android:id="@+id/area" />

        <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_alignLeft="@+id/addToilet"
            android:layout_alignStart="@+id/addToilet"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="190dp"
            android:id="@+id/addArea" />

        <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/addToilet"
            android:layout_alignLeft="@+id/removeRoom"
            android:layout_alignStart="@+id/removeRoom"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/removeArea" />
    </android.support.v7.widget.CardView>

</RelativeLayout>